  <div class="sidebar-menu">
      <ul>
          <li>
            <%= link_to '<i class="fa fa-plus"></i>Inserir'.html_safe, new_user_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-arrow-left"></i>Voltar'.html_safe, apps_path %>
